# ===========================================
# KmedTour Environment Variables Template
# ===========================================
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to version control

# -------------------------------------------
# Supabase Configuration (Required)
# -------------------------------------------
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# -------------------------------------------
# AI Provider API Keys (At least one required)
# -------------------------------------------
# Google Gemini
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-1.5-flash
GEMINI_EMBEDDING_MODEL=text-embedding-004

# OpenAI
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4-turbo

# Anthropic Claude
ANTHROPIC_API_KEY=your-anthropic-api-key

# OpenRouter (Multi-provider)
OPENROUTER_API_KEY=your-openrouter-api-key
OPENROUTER_MODEL_MAIN=anthropic/claude-3.5-sonnet

# xAI (Optional)
XAI_API_KEY=your-xai-api-key

# -------------------------------------------
# Payment Processing (Stripe)
# -------------------------------------------
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# -------------------------------------------
# Email Service (Resend)
# -------------------------------------------
RESEND_API_KEY=re_your-resend-api-key
FROM_EMAIL=noreply@kmedtour.com
FROM_NAME=KmedTour

# -------------------------------------------
# Messaging (WhatsApp - Optional)
# -------------------------------------------
WHATSAPP_ACCESS_TOKEN=your-whatsapp-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id

# -------------------------------------------
# Database & Caching (Optional - for docker-compose)
# -------------------------------------------
POSTGRES_PASSWORD=your-secure-postgres-password
REDIS_PASSWORD=your-secure-redis-password
REDIS_URL=redis://localhost:6379

# Qdrant Vector Database
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=

# -------------------------------------------
# Monitoring & Observability (Optional)
# -------------------------------------------
# Langfuse
LANGFUSE_SECRET=your-langfuse-secret-key
LANGFUSE_URL=http://localhost:3030
LANGFUSE_SALT=your-langfuse-salt

# Sentry (Error Tracking)
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_AUTH_TOKEN=

# -------------------------------------------
# Application Configuration
# -------------------------------------------
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Rate Limiting
RAG_RATE_LIMIT=30

# Python Agent URL (for RAG/AI features)
PYTHON_AGENT_URL=http://127.0.0.1:8000

# -------------------------------------------
# Feature Flags (Optional)
# -------------------------------------------
ENABLE_AI_FEATURES=true
ENABLE_PAYMENT_PROCESSING=true
ENABLE_RAG_CHAT=true
